{
  "compilerOptions": {
    "target": "ES2020",              // Usando ES2020 para aproveitar mais recursos do JavaScript moderno
    "module": "esnext",              // Módulos ES6 para compatibilidade com bundlers
    "rootDir": "./src",              // Diretório fonte
    "outDir": "./dist",              // Diretório de saída
    "strict": true,                  // Habilita verificações estritas de tipo
    "esModuleInterop": true,         // Habilita compatibilidade com módulos ES6
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,            // Ignora verificação de tipos em arquivos de bibliotecas (node_modules)
    "declaration": true              // Gera arquivos .d.ts de definição de tipos
  },
  "include": ["src"],                // Diretório de origem
  "exclude": ["node_modules"]        // Exclui node_modules da compilação
}

